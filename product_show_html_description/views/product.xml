<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_html_description" model="ir.ui.view">
        <field name="name">product.template.html.description</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='shop']" position="after">
                <group  string="HTML Website Description" name="product_website_description">
                    <field name="website_description"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
