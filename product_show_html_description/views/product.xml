<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_html_description" model="ir.ui.view">
        <field name="name">product.template.html.description</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_template_images']" position="before">
                <field name="website_description" options="{'codeview': true}" string="Website HTML description"/>
            </xpath>
        </field>
    </record>

</odoo>
